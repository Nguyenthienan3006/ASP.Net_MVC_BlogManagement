@using BM.Model
@model List<Tag>
<style>
      * {
        box-sizing: border - box;
        }

        .css1 {
        display: flex;
        flex-direction: column;
        width: 200px;
        background-color: #f8f9fa;
        padding: 10px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
    }

            .css1 a {
        text-decoration: none;
        color: #333;
        margin-bottom: 10px;
        font-size: 14px;
    }

                .css1 a:hover {
        color: #007bff;
    }

    p {
        font-weight: bold;
    }

    h2 {
        margin-left: 200px
    }

</style>

<h2>Tags List</h2>

<div class="row">
    <div class="css1 table col-2">
        <p>Tag Menu</p>
        <a href="~/Tag/Create">Create Tag</a>
        <a href="~/Tag/GetTagByUrlSlug">Get Tag By UrlSlug</a>
    </div>
    <div class="col-10">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Tag Id</th>
                    <th>Tag Name</th>
                    <th>Url slug</th>
                    <th>Description</th>
                    <th>Count</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.Id</td>
                        <td>@t.Name</td>
                        <td>@t.UrlSlug</td>
                        <td>@t.Description</td>
                        <td>@t.Count</td>
                        <td>
                            <a href="~/Tag/Edit/@t.Id">Edit</a> |
                            <a href="~/Tag/Delete/@t.Id" onclick="return confirm('Do you want to delete this item')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>