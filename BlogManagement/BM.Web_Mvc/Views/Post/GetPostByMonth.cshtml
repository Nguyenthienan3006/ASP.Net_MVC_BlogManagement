@using BM.Model
@model Post

<h2>Get Post By Month</h2>

<form method="post" class="form-group">
    <label for="year">Year:</label>
    <input type="number" id="year" name="year" class="form-control" required>

    <label for="month">Month:</label>
    <input type="number" id="month" name="month" class="form-control" required>

    <label for="urlSlug">URL Slug:</label>
    <input type="text" id="urlSlug" name="urlSlug" class="form-control" required>

    <button type="submit" class="btn btn-primary">Get Post</button>
</form>

@if (Model != null)
{
    <table class=" table table-bordered">
        <thead>
            <tr>
                <th>Post Id</th>
                <th>Title</th>
                <th>Short description</th>
                <th>Post content</th>
                <th>Url Slug</th>
                <th>Published</th>
                <th>Posted on</th>
                <th>Modified</th>
                <th>Category Id</th>

            </tr>
        </thead>
        <tbody>
                <tr>
                <td>@Model.Id</td>
                <td>@Model.Title</td>
                <td>@Model.ShortDescription</td>
                <td>@Model.PostContent</td>
                <td>@Model.UrlSlug</td>
                <td>@Model.Published</td>
                <td>@Model.PostedOn</td>
                <td>@Model.Modified</td>
                <td>@Model.CategoryId</td>
                </tr>
        </tbody>
    </table>
}


